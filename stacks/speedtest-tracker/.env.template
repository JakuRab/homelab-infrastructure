# Speedtest Tracker Configuration

# Application key - generate with: php artisan key:generate --show
# Or use: echo "base64:$(openssl rand -base64 32)"
APP_KEY=base64:your_app_key_here

# Admin credentials
ADMIN_NAME=Kuba
ADMIN_EMAIL=your@email.com
ADMIN_PASSWORD=your_secure_password

# Test schedule (cron format) - default: every 6 hours
SPEEDTEST_SCHEDULE=0 */6 * * *

# Keep results forever (0) or prune after X days
PRUNE_RESULTS_OLDER_THAN=0

# Preferred speedtest servers (comma-separated IDs)
# Find servers at: https://www.speedtest.net/speedtest-servers.php
SPEEDTEST_SERVERS=3671,7200,23122
